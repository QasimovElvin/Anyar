@using Elvi.Az.Models
@using Elvi.Az.ViewModels

@{
    ViewData["Title"] = "Index";
    int count =((Model.CurrentPage - 1) * 3) + 1;
}
@model PaginateVM<Team>
<div>
    <a type="button" class="btn btn-success" asp-controller="Team" asp-action="Create">Create</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Team table</h4>
                            
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                              Image
                            </th>
                            <th>
                               Name
                            </th>
                            <th>
                               Profession
                            </th>
                            <th>
                               Description
                            </th>
                             <th>
                               Edit
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                 @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                   <img src="~/assets/img/team/@item.Image">
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                  @item.Profession
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a type="button" class="btn btn-warning" asp-controller="Team" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                </td>
                                <td>
                                    <a type="button" class="btn btn-danger" asp-controller="Team" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <nav aria-label="...">
                    <ul class="pagination pagination-lg">
                     @for (int i = 1; i <=Model.PageCount ; i++)
                        {
                            <li class="page-item  @(Model.CurrentPage==i?"enable":"")" >
                                <a class="page-link"  asp-controller="Team" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

